<Window x:Class="IOTADemos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IOTADemos"
        xmlns:windows="clr-namespace:IOTADemos.Windows"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1000" WindowStyle="None" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Window.Resources>
        <ResourceDictionary>
            <BooleanToVisibilityConverter x:Key="BoolToVis" />
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <windows:AppUserControl VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
        <windows:DemoChooser VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
        <windows:Demo1 VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
        <windows:Spinner VerticalAlignment="Center" HorizontalAlignment="Center"/>
    </Grid>
</Window>
