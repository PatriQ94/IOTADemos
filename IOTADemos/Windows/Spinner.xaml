                <EasingColorKeyFrame KeyTime="0:0:0.2" Value="#FF2CD1D1"/>
                <EasingColorKeyFrame KeyTime="0:0:0.3" Value="#BF2CD1D1"/>
                <EasingColorKeyFrame KeyTime="0:0:0.4" Value="#7F2CD1D1"/>
