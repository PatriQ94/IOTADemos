                <EasingColorKeyFrame KeyTime="0" Value="#7F2CD1D1"/>
                <EasingColorKeyFrame KeyTime="0:0:0.1" Value="#3F2CD1D1"/>
                <EasingColorKeyFrame KeyTime="0:0:0.2" Value="#002CD1D1"/>
                <EasingColorKeyFrame KeyTime="0:0:0.3" Value="#002CD1D1"/>
